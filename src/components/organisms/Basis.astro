---
import { type Icon } from "@/models/types/Icon";
import Section from "../molecules/Section.astro";
import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import X from "@/icons/X.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import GitHub from "@/icons/GitHub.astro";
import { getEntry } from "astro:content";

const basis = await getEntry("basis", "data");

const SOCIAL_ICONS: Icon = {
  GitHub,
  LinkedIn,
  X,
};

const { name, label, image, email, phone, profiles } = basis.data;
---

<Section>
  <div class="host">
    <div class="information">
      <div class="body">
        <h1>{name}</h1>
        <p>{label}</p>
      </div>

      <footer class="print">
        {
          [
            email,
            phone,
            profiles?.find(({ network }) => network === "LinkedIn")?.url,
          ].map((info) => <a class="profile profile--print">{info}</a>)
        }
      </footer>
      <footer class="no-print">
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Enviar un correo electrónico a ${name} al correo ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              href={`tel:${phone}`}
              title={`Llamar por teléfono a ${name} al número ${phone}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles &&
            profiles.map(({ network, url }) => {
              let Icon;

              if (network) {
                Icon = SOCIAL_ICONS[network];
              }

              return (
                <a
                  class="profile"
                  href={url}
                  title={`Visitar el perfil de ${name} en ${network}`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon />
                </a>
              );
            })
        }
      </footer>
    </div>

    {image && <img class={"no-print"} src={image} alt={name} width="112" />}
  </div>
</Section>

<style>
  .host {
    display: grid;
    grid-template-columns: 1fr auto;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.5rem;
  }
  .information {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .body {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  h1 {
    color: var(--primary);
    font-weight: bold;
  }

  p {
    color: var(--monochromatic--darker);
  }

  footer {
    display: flex;
    gap: 0.5rem;
  }

  footer.no-print {
    flex-direction: row;
  }

  footer.print {
    gap: 1ch;
  }
  .profile--print {
    display: inline;
    font-size: 0.8rem;
  }

  a {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.25rem;
  }

  picture {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    background-color: var(--primary);
    border-radius: 1rem;
  }

  @media (min-width: 48rem) {
    .host {
      gap: 1rem;
    }
  }
</style>
