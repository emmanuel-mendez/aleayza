---
import { type Icon } from "@/models/types/Icon";
import Section from "../molecules/Section.astro";
import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import X from "@/icons/X.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import GitHub from "@/icons/GitHub.astro";
import { getEntry } from "astro:content";

const basis = await getEntry("basis", "data");

const SOCIAL_ICONS: Icon = {
  GitHub,
  LinkedIn,
  X,
};

const { name, headline, image, email, phone, profiles } = basis.data;
---

<Section>
  <div class="host">
    <div class="information">
      <div class="body">
        <h1 class="name">{name}</h1>
        <p class="headline">{headline}</p>
      </div>

      <footer class="footer footer--print print">
        {
          [
            email,
            phone,
            profiles?.find(({ network }) => network === "LinkedIn")?.url,
          ].map((info) => <a class="profile profile--print">{info}</a>)
        }
      </footer>
      <footer class="footer footer--no-print no-print">
        {
          email && (
            <a
              class="profile profile--no-print"
              href={`mailto:${email}`}
              title={`Enviar un correo electrónico a ${name} al correo ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              class="profile profile--no-print"
              href={`tel:${phone}`}
              title={`Llamar por teléfono a ${name} al número ${phone}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles &&
            profiles.map(({ network, url }) => {
              let Icon;

              if (network) {
                Icon = SOCIAL_ICONS[network];
              }

              return (
                <a
                  class="profile profile--no-print"
                  href={url}
                  title={`Visitar el perfil de ${name} en ${network}`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon />
                </a>
              );
            })
        }
      </footer>
    </div>

    <picture class="picture no-print">
      {image && <img class="image" src={image} alt={name} width="112" />}
    </picture>
  </div>
</Section>

<style>
  .host {
    display: grid;
    grid-template-columns: 1fr auto;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.5rem;
  }
  .information {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .body {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .name {
    color: var(--primary);
    font-weight: bold;
    font-size: 2rem;
  }

  .headline {
  }

  .footer {
    display: flex;
    gap: 0.5rem;

    &--print {
      text-align: center;
      gap: 2rem;
    }

    &--no-print {
      flex-direction: row;
    }
  }

  .profile {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.25rem;

    &--print {
      display: inline;
    }
    &--no-print {
      display: inline;
      font-size: 0.8rem;
    }
  }

  .picture {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .image {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    background-color: var(--primary);
    border-radius: 1rem;
  }

  @media (min-width: 48rem) {
    .host {
      gap: 1rem;
    }
  }
</style>
