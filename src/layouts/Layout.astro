---
import Footer from "../components/organisms/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Aleayza is a free and open-source template, built with Astro and TypeScript. It serves as a starting point for creating your personal portfolio website or showcasing your projects online. The template is open-source and released under the MIT license, meaning you are free to use, modify, and distribute it for personal or commercial purposes."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="layout">
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  /* generic */
  @import "../styles/generic/normalize.css";
  @import "../styles/generic/box-sizing.css";

  /* settings */
  @import "../styles/settings/color.css";
  @import "../styles/settings/typography.css";

  /* elements */
  @import "../styles/elements/figure.css";
  @import "../styles/elements/heading.css";
  @import "../styles/elements/image.css";
  @import "../styles/elements/input.css";
  @import "../styles/elements/link.css";
  @import "../styles/elements/paragraph.css";

  /* objects */
  @import "../styles/objects/container.css";
  @import "../styles/objects/unordered-list.css";

  /* utilities */
  @import "../styles/utilities/cursor.css";
  @import "../styles/utilities/display.css";
  @import "../styles/utilities/position.css";
  @import "../styles/utilities/responsive.css";
  @import "../styles/utilities/background.css";

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }
  }
</style>

<style>
  .layout {
    display: grid;
    min-height: 100svh;
    grid-template-columns: 1fr auto;
    padding: 2rem;
  }

  @media (min-width: 48rem) {
    .layout {
      padding: 4rem;
    }
  }
</style>
