  summary {
    display: list-item;
  }

  /* Misc
   ========================================================================== */

  /**
 * Add the correct display in IE 10+.
 */

  template {
    display: none;
  }

  /**
 * Add the correct display in IE 10.
 */

  [hidden] {
    display: none;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  :root {
    --white: #ffffff;
    --black: #000000;
    --primary: #204d66;
    --complementary: #663920;
    --analogous--primary: #20665c;
    --analogous--primary-10: #20665c10;
    --analogous--secondary: #202a66;
    --analogous--secondary-10: #202a6610;
    --split-complementary--primary: #665c20;
    --split-complementary--secondary: #66202a;
    --triadic--primary: #4d6620;
    --triadic--secondary: #66204d;
    --tetradic--primary: #206639;
    --tetradic--secondary: #66204d;
    --tetradic--tertiary: #663920;
    --monochromatic--darker: #0e212c;
    --monochromatic--dark-deep: #14303f;
    --monochromatic--dark: #1a3e53;
    --monochromatic--light: #265c79;
    --monochromatic--light--deep: #2c6a8d;
    --monochromatic--lighter: #3279a0;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
      "Segoe UI Symbol";
  }

  figure {
    margin: 0;
  }

  h1,
  h2,
  h3,
  h4,
  h5 {
    margin-top: 0;
    margin-bottom: 0;
  }

  img {
    max-width: 100%;
  }

  a {
    color: currentcolor;
    text-decoration: none;
  }

  a.link {
    text-decoration: underline;
  }

  a.link:hover,
  a.link:focus {
    color: var(--white);
  }

  a.link:hover.link--disabled,
  a.link:focus.link--disabled {
    color: currentcolor;
  }

  a.link--disabled {
    cursor: default;
    opacity: 0.5;
  }

  p {
    max-width: 75ch;
    margin-top: 0;
    margin-bottom: 0;
  }

  .container {
    max-width: 85.375em;
  }

  @media (width >= 48em) {
    .container {
      margin: 0 auto;
    }
  }

  ul {
    padding: 0;
    margin-top: 0;
    margin-bottom: 0;
    list-style: none;
  }

  .background--primary {
    background-color: var(--white);
  }

  .background--secondary {
    background-color: var(--black);
  }

  .cursor--pointer {
    cursor: pointer;
  }

  .display--none {
    display: none;
  }

  .display--block {
    display: block;
  }

  .display--inline {
    display: inline;
  }

  .display--flex {
    display: flex;
  }

  .display--grid {
    display: grid;
  }

  .position--static {
    position: static;
  }

  .position--relative {
    position: relative;
  }

  .position--absolute {
    position: absolute;
  }

  .position--fixed {
    position: fixed;
  }

  .position--sticky {
    position: sticky;
  }

  .responsive--mobile {
    @media (width >=26.875rem) {
      display: none;
    }
  }

  .responsive--tablet {
    @media (width >=48rem) {
      display: none;
    }
  }

  .responsive--desktop {
    @media (width <=64rem) {
      display: none;
    }
  }

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }
  }

  .layout {
    display: grid;
    min-height: 100svh;
    grid-template-columns: 1fr auto;
    padding: 2rem 1rem;
  }

  @media (min-width: 48rem) {
    .layout {
      padding: 4rem 2rem;
    }
  }
</style>
